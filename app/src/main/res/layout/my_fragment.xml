<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/my_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小飞侠"
            android:layout_toRightOf="@id/my_icon"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地：山西太原"
            android:layout_toRightOf="@id/my_icon"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="50dp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:text="历史信息"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/history"
            android:drawableRight="@drawable/back"
            android:drawablePadding="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="18sp"/>

        <View
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:text="收藏"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/collection"
            android:drawableRight="@drawable/back"
            android:drawablePadding="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="18sp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:text="设置"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/setting"
            android:drawableRight="@drawable/back"
            android:drawablePadding="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="18sp"/>

        <View
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:text="推荐给好友"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/recommend"
            android:drawableRight="@drawable/back"
            android:drawablePadding="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textSize="18sp"/>

    </LinearLayout>

</LinearLayout>